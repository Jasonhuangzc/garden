{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      ".venv/**",
      ".vercel/**",
      ".agent/**",
      ".git/**",
      ".firebase/**",
      "**/node_modules/**",
      "**/*.py",
      "**/__pycache__/**",
      "**/*.md",
      "**/*.txt",
      "**/*.json",
      "test_*.py",
      "integration_examples.py",
      "firestore.rules",
      "firestore.indexes.json"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}